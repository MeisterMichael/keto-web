.container
	.row
		.col-12
			%nav{ 'aria-label' => 'breadcrumb' }
				%ol.breadcrumb
					%li.breadcrumb-item
						%a{ href: enrollments_path() } My Courses
					%li.breadcrumb-item
						%a{ href: main_app.enrollment_path( @enrollment.id ) }
							= @course_content.course.title
					%li.breadcrumb-item.active{ 'aria-current' => 'page' }=@course_content.title

			%h1= @course_content.title
			%h2 Overview
			.fr-view.mtb-30
				= raw @course_content.overview
			%hr
			.fr-view.mtb-30
				= raw @course_content.content
			= form_for @enrollment_course_content, url: complete_enrollment_course_content_path( @enrollment_course_content ) do |f|
				= f.submit 'Complete', class: 'btn btn-md btn-dark'
