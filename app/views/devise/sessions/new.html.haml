
%section.inner-intro{ style: 'height: auto;padding: 0;' }
	.container
		.row.title
			%h2.h2 Login
			.page-breadcrumb
				%a{ href: main_app.root_path() }> Home
				\/
				%span Login
			.col-12.col-md-6.offset-md-3
				.card.mt-4
					.card-body
						= form_for resource, as: resource_name, url: user_session_path( resource_name ), role: :form, id: :login do |f|
							.form-group
								= f.text_field :login, autofocus: true, placeholder: "email", class: 'form-control'
							.form-group
								= f.password_field :password, placeholder: "password", class: 'form-control'
							%div
								= f.submit "Login", class: 'btn btn-primary btn-md mb-0'
