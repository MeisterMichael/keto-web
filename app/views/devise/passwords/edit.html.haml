
%section.inner-intro{ style: 'height: auto;padding: 0;' }
	.container
		.row.title
			%h2.h2 Reset Password
			.page-breadcrumb
				%a{ href: main_app.root_path() }> Home
				\/
				%span Reset Password
			.col-12.col-md-6.offset-md-3
				.card.mt-4
					.card-body
						= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
							= f.hidden_field :reset_password_token
							.form-group
								= f.label :login, 'New Password'
								= f.password_field :password, autocomplete: 'off', class: 'form-control'
							.form-group
								= f.label :login, 'Confirm New Password'
								= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'

							.form-group.text-center
								= f.submit 'Change my Password', class: 'btn btn-black btn-md'
