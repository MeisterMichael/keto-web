/ Contact Form
%section#contact-us.wow.fadeIn.ptb.ptb-sm-80.animated.dark-bg.overlay-dark.bg-image.overlay-dark60{"data-background-img" => 'https://cdn.dribbble.com/users/161337/screenshots/989585/bacon.png', "data-stellar-background-ratio" => "0.5"}
	.container
		.row.text-center
			.col-12
				%h6.page-title-alt.color.mb-15 Wanna say hello?
				%h2.page-title
					Get In
					%span.text-light Touch
		.row
			.col-md-8.offset-md-2

				= form_for Scuttlebutt::Message.new, url: scuttlebutt.contacts_path, html: { id: 'contact-form', class: 'row contact-form' } do |f|
					.col-md-12.text-center
						%h5.successContent
							%i.fa.fa-check.left{:style => "color: #5cb45d;"}>
							Your message has been sent successfully.
						%h5.errorContent{:style => "color: #e1534f;"}
							%i.fa.fa-exclamation-circle.left>
							There was a problem validating the form please check!
					.col-md-6
						.form-field-wrapper
							= f.text_field :name, id: 'form-name', :placeholder => "Your Name", required: true, class: 'input-md form-full'
						.form-field-wrapper
							= f.email_field :email, id: 'form-email', :placeholder => "Email", required: true, class: 'input-md form-full'
						.form-field-wrapper
							= f.text_field :title, id: 'form-subject', :placeholder => "Subject", class: 'input-md form-full'
					.col-md-6.mb-0
						.form-field-wrapper
							= f.text_area :content, id: 'form-message', :placeholder => "Your Message", :required => true, rows: 7, class: 'input-md form-full'
					.col-md-12.text-center
						%button#form-submit.btn-contact-submit.btn.btn-md.btn-color{:name => "submit", :type => "submit"} Submit
/ End Contact Form
