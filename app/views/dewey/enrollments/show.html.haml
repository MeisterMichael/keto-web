- if @course.cover_attachment.attached?
	%img.pb-3{ src: @course.cover_attachment.service_url }
.container
	.row
		.col-12
			%nav{ 'aria-label' => 'breadcrumb' }
				%ol.breadcrumb
					%li.breadcrumb-item
						%a{ href: dewey.enrollments_path() } My Courses
					%li.breadcrumb-item.active{ 'aria-current' => 'page' }= @course.title

			.row
				.col-md-4.col-lg-3.d-none.d-md-block
					= render 'sidebar', course: @course, enrollment: @enrollment, args: {}
				.col-md-8.col-lg-9

					.text-right
						- if @next_course_pages.first
							%a.btn.btn-md.btn-primary{ href: dewey.enrollment_course_page_path( @next_course_pages.first.id, enrollment_id: @enrollment.id ) } Begin

					.fr-view.mtb-30
						= raw @course.course_page.content
					- @course.course_page.content_sections.each do |section|
						= render_section( section )
