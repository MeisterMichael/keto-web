- if @media.cover_image.present?
	/ Intro Section
	%section.inner-intro.dark-bg.bg-image.overlay-dark.parallax.parallax-background1{"data-background-img" => @media.cover_image }
		.container
			.row.title
				%h2.h2=@media.title
				.page-breadcrumb
					%a{ href: dewey.enrollments_path() }> My Courses
					\/
					%a{ href: dewey.enrollment_path( @enrollment ) }>= @media.course.title
					\/
					%span>=@media.title
	/ End Intro Section
- else
	/ Intro Section
	%section.inner-intro.dark-bg.bg-image.overlay-dark.parallax.parallax-background1
		.container
			.row.title
				%h2.h2=@media.title
				.page-breadcrumb
					%a{ href: dewey.enrollments_path() }> My Courses
					\/
					%a{ href: dewey.enrollment_path( @enrollment ) }>= @media.course.title
					\/
					%span>=@media.title
.container.pt-4.pb-2
	.row
		.col-12
			.row
				.col-md-4.col-lg-3.d-none.d-md-block
					= render 'dewey/enrollments/sidebar', course: @course, enrollment: @enrollment, args: { page: @media }
				.col-md-8.col-lg-9
					= render 'control_bar', args: {}
					.fr-view.mtb-30
						= raw @media.content
					- @media.content_sections.each do |section|
						= render_section( section )
					- if defined?( Scuttlebutt )
						= render 'scuttlebutt/comments/widget', parent_obj: @course.course_page, args: { page: params[:page] }
